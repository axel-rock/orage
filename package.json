{
	"name": "orage",
	"version": "0.0.3",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"db": "wrangler d1 execute orage --local --file=./drizzle/0000_short_lockheed.sql",
		"db:prod": "pnpm wrangler d1 execute orage --remote --file=drizzle/0007_tiresome_ogun.sql",
		"gen": "drizzle-kit generate && wrangler d1 migrations apply orage",
		"preview": "pnpm run build && wrangler pages dev",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"deploy": "pnpm run build && wrangler d1 execute orage --remote && wrangler pages deploy",
		"cf-typegen": "wrangler types && mv worker-configuration.d.ts src/"
	},
	"devDependencies": {
		"@auth/core": "^0.37.2",
		"@cloudflare/workers-types": "^4.20241022.0",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/adapter-cloudflare": "^4.7.4",
		"@sveltejs/kit": "^2.7.3",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/eslint": "^9.6.1",
		"drizzle-kit": "^0.24.2",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"globals": "^15.11.0",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"svelte": "^5.1.3",
		"svelte-check": "^4.0.5",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.11.0",
		"vite": "^5.4.10",
		"wrangler": "^3.83.0"
	},
	"type": "module",
	"dependencies": {
		"@auth/sveltekit": "^1.7.2",
		"drizzle-orm": "^0.33.0",
		"nanoid": "^5.0.7"
	}
}
